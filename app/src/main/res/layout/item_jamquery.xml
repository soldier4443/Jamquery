<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  android:paddingBottom="12dp"
  android:paddingLeft="20dp"
  android:paddingRight="20dp"
  android:paddingTop="12dp"
  tools:background="@color/greyish_brown">

  <TextView
    android:id="@+id/jamquery_item_date"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textColor="@color/white_three"
    android:textSize="12sp"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    tools:text="20180318"/>

  <View
    android:id="@+id/reference_point"
    android:layout_width="1dp"
    android:layout_height="1dp"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintHorizontal_bias="0.3"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toRightOf="parent"
    app:layout_constraintTop_toTopOf="parent"/>

  <TextView
    android:id="@+id/jamquery_item_title"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:maxLines="1000"
    android:textColor="@color/white_three"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintHorizontal_bias="0"
    app:layout_constraintLeft_toRightOf="@+id/reference_point"
    app:layout_constraintRight_toRightOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    tools:text="[ANDROID] 안드로이드 스튜디오 설정asdknadksna kjsdnakd sjnasdk jnasdjk nadkjnasd kjnadjna sdkna sdjasdnkajdnsksajdn"/>

</android.support.constraint.ConstraintLayout>